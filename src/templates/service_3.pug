extends settings/layout

prepend html
  - const lang = "ru";
  - const classBody = "service";
  - const serviceName = {ua: "Дитяча стрижка", ru: "Детская стрижка"};

prepend head
  - const pageTitle = "Детская стрижка";
  - const themeColor = "#fff";

append head

append content
  include components/svg.html
  include components/header
  include components/btn
  include components/breadcrumbs

  .service
    .container.service__container
      .service__wrapper
        h1.service__title(data-lang-ua!=serviceName.ua data-lang-ru!=serviceName.ru)
        .service__wrapper_article
          img.service__img(src="img/service_3.jpg", alt="Photo")
          p.service__text_article(data-lang-ua='Хто сказав, що існують вікові обмеження у стилі? Модель поведінки чоловіка закладається ще в дитинстві. Вкрай приємно бачити підростаючих чоловіків з елегантною, стильною і охайною стрижкою. <br> У <b>Baribal barbershop</b> можуть порадити маленьким чоловікам, як доглядати за своїм волоссям. <b>Модні зачіски для хлопчиків</b> існують у величезній кількості і на будь-який смак.' data-lang-ru='Кто сказал, что существуют возрастные ограничения в стиле? Модель поведения мужчины закладывается еще в детстве. Крайне приятно видеть подрастающих мужчин с элегантной, стильной и аккуратной стрижкой. <br> В <b>Baribal barbershop</b> могут посоветовать маленьким мужчинам, как ухаживать за своими волосами. <b>Модные прически для мальчиков</b> сегодня есть в огромном количестве и на любой вкус.')

        .service__wrapper_list
          h2.service__title_list(data-lang-ua='Що входить до послуги "Дитяча стрижка"?' data-lang-ru='Что входит в услугу “Детская стрижка" ?')
          ul.service__list
            li.service__item(data-lang-ua="Послуга починається з консультації. З'ясовуємо переваги по довжині і формі стрижки. У Baribal завжди буде врахована думка не тільки батьків, але і самої дитини." data-lang-ru='Услуга начинается с консультации. Выясняем предпочтения по длине и форме стрижки. В Baribal всегда будет учтено мнение не только родителей, но и самого ребенка.')
            li.service__item(data-lang-ua='Далі Барбер миє волосся спеціальним шампунем.' data-lang-ru='Далее барбер моет волосы специальным шампунем.')
            li.service__item(data-lang-ua='Барбер створює форму стрижки за допомогою професійних ножиць і машинок.' data-lang-ru='Барбер создает форму стрижки при помощи профессиональных ножниц и машинок.')
            li.service__item(data-lang-ua='Ще одне миття, щоб прибрати зайве волосся.' data-lang-ru='Еще одно мытье волос, чтобы убрать лишние волосы.')
            li.service__item(data-lang-ua='Сушка волосся. Обираємо потрібний засіб для укладки і наносимо на волосся, щоб надати і зафіксувати форму.' data-lang-ru='Сушка волос. Выбираем нужное укладочное средство  наносим на волосы, чтобы придать и зафиксировать форму.')


        p.service__text(data-lang-ua='Не має значення, скільки років нашому клієнту, для нас будь-який відвідувач особливий, і його переваги грають велику роль при формуванні нового образу! Тому підхід до дитячої стрижки у нас нічим не відрізняється від дорослої. <br> Фірмова гостинність, сервіс і приємна атмосфера - цього заслуговує кожен! Послуга надається дітям, які не досягли 12 років.' data-lang-ru='Не имеет значения, сколько лет нашему клиенту, для нас любой посетитель особенный, и его предпочтения имеют вес при формировании нового образа!  Поэтому подход к детской стрижке у нас ничем не отличается от взрослой. Фирменное гостеприимство, сервис и приятная атмосфера - этого достоин каждый! <br> Услуга предоставляется детям, не достигшим 12 лет.')

        p.service__text(data-lang-ua='Барбери <a href="index.html">Baribal</a> рекомендують відвідувати барбершоп не рідше ніж раз у місяць, для підтримки охайності дитячої стрижки та її форми.' data-lang-ru='Барберы <a href="index.html">Baribal</a> рекомендуют посещать барбершоп не реже чем раз месяц, для поддержки аккуратности детской стрижки и ее формы.')

        p.service__text(data-lang-ua='Відвідати наш барбершоп ви можете за адресою Проспект Миколи Бажана 1а, ЖК "Зарічний". Барбершоп Baribal знаходиться поруч з метро Славутич.' data-lang-ru='Посетить наш барбершоп вы можете по адресу Проспект Николая Бажана 1а, ЖК “Заречный”. Барбершоп Baribal находится рядом с метро Славутич.')



  include components/contacs
  script(src="js/service.js")
