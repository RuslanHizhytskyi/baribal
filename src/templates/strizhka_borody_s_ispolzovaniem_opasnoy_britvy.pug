extends settings/layout_service

prepend html
  - const lang = "ru";
  - const classBody = "service";
  - const serviceName = {ua: "Стрижка бороди з використання небезпечної бритви", ru: "Стрижка бороды с использование опасной бритвы"};

prepend head
  - const pageTitle = "Стрижка бороды с использование опасной бритвы";
  - const themeColor = "#fff";

append head

append content
  include components/svg.html
  include components/header
  include components/btn
  include components/breadcrumbs

  .service
    .container.service__container
      .service__wrapper
        h1.service__title(data-lang-ua!=serviceName.ua data-lang-ru!=serviceName.ru)

        .service__wrapper_article
          img.service__img(src="img/service_5.jpg", alt="Photo")
          p.service__text_article(data-lang-ua='У <b>Baribal barbershop</b> працюють справжні професіонали, які знають все про моделювання борід і вусів, створення стильних чоловічих образів і особливості підтримки вже існуючої форми. Досвідчений майстер підбере для вас стиль і форму з урахуванням індивідуальних особливостей, достоїнств обличчя. Наші Барбери підбирають тип (якір, еспаньйолка, Бальбо, Бретта і т.д.) до форми обличчя і побажанням гостя.' data-lang-ru='В <b>Baribal barbershop</b> работают настоящие профессионалы, которые знают все о моделировании бород и усов, создании стильных мужских образов и особенностях поддержания уже существующей формы. Опытный мастер подберет для вас вид и форму с учетом индивидуальных особенностей, достоинств лица. Наши барберы подбирают тип (русская, якорь, эспаньолка, бальбо, бретта и т.д.) к форме лица и пожеланиям гостя.')


        .service__wrapper_list
          h2.service__title_list(data-lang-ua='Що входить в послугу "Стрижка бороди з використання небезпечної бритви"?' data-lang-ru='Что входит в услугу "Стрижка бороды с использованием опасной бритвы" ?')
          ul.service__list
            li.service__item(data-lang-ua="Послуга починається з консультації. З'ясовуємо переваги, підбираємо оптимальний варіант і стиль." data-lang-ru='Услуга начинается с консультации. Выясняем предпочтения, подбираем оптимальный вариант и стиль.')
            li.service__item(data-lang-ua='Барбер створює форму бороди за допомогою машинки і ножиць.' data-lang-ru='Барбер создает форму бороды с помощью машинки и ножниц.')
            li.service__item(data-lang-ua='Майстер підкреслює контур тримерами, в залежності від побажань гостя, далі Барбер видаляє зайве волосся шейвером.' data-lang-ru='Мастер подчеркивает контура триммером, в зависимости от пожеланий гостя, далее барбер удаляет лишние волосы шейвером.')
            li.service__item(data-lang-ua='Після роботи тримерами і шейвером, шкіру необхідно розпарити: наносимо піну, ефірну олію, накриваємо обличчя гарячим рушником.' data-lang-ru='После работы триммером и шейвером кожу необходимо распарить: наносим пену, эфирное масло, накрываем лицо горячим полотенцем.')
            li.service__item(data-lang-ua='Далі барбер наводить контур і підбриває небезпечною бритвою.' data-lang-ru='Далее барбер наводит контур и подбривает опасной бритвой.')
            li.service__item(data-lang-ua='Барбер визначає засіб, найбільш підходящий за типом волосся і наносить на бороду. З засобів може бути: масло, лосьйон, бальзам або віск.' data-lang-ru='Барбер определяет средство, наиболее подходящее по типу волос и наносит на бороду. Из средств может быть: масло, лосьон, бальзам или воск.')


        p.service__text(data-lang-ua='У <a href="index.html">Baribal</a> послуга "Стрижка бороди з небезпечною бритвою" вас приємно здивує. Важливо підібрати найбільш підходящу форму бороди і правильно за нею доглядати. У послугу входить дизайн бороди, стрижка, розпарювання, гоління, оформлення і корекція.' data-lang-ru='В <a href="index.html">Baribal</a> услуга “Стрижка бороды с опасной бритвой” вас приятно удивит. Важно подобрать наиболее подходящую форму бороды и правильно за ней ухаживать. В услугу входит дизайн бороды, стрижка, распаривание, бритье, оформление и коррекция. ')

        p.service__text(data-lang-ua='Корекція бороди вимагає регулярного оновлення, якщо не приводити бороду в порядок в належний час, з ростом волосся борода почне втрачати форму і перестане виглядати охайно, тому двері <b>Baribal барбершопу</b> завжди відкриті для повторного візиту.' data-lang-ru='Коррекция бороды требует регулярного обновления, если не приводить бороду в пордок в положенное время, с ростом волос борода начнет терять форму и перестанет выглядеть аккуратно, поэтому двери <b>Baribal барбершопа</b> всегда открыты для повторного визита.')

        p.service__text(data-lang-ua='Барбери <a href="index.html">Baribal</a> рекомендують відвідувати барбершоп не рідше ніж раз у місяць, для підтримки охайності дитячої стрижки та її форми.' data-lang-ru='Барберы <a href="index.html">Baribal</a> рекомендуют посещать барбершоп не реже чем раз месяц, для поддержки аккуратности детской стрижки и ее формы.')

        p.service__text(data-lang-ua='Відвідати наш барбершоп ви можете за адресою Проспект Миколи Бажана 1а, ЖК "Зарічний". Барбершоп Baribal знаходиться поруч з метро Славутич.' data-lang-ru='Посетить наш барбершоп вы можете по адресу Проспект Николая Бажана 1а, ЖК “Заречный”. Барбершоп Baribal находится рядом с метро Славутич.')



  include components/contacs
  script(src="js/service.js")
