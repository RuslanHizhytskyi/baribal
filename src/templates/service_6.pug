extends settings/layout

prepend html
  - const lang = "ru";
  - const classBody = "service";
  - const serviceName = {ua: "Комплекс", ru: "Комплекс"};

prepend head
  - const pageTitle = "Комплекс";
  - const themeColor = "#fff";

append head

append content
  include components/svg.html
  include components/header
  include components/btn
  include components/breadcrumbs

  .service
    .container.service__container
      .service__wrapper
        h1.service__title(data-lang-ua!=serviceName.ua data-lang-ru!=serviceName.ru)
        .service__wrapper_article
          img.service__img(src="img/service_6.jpg", alt="Photo")
          p.service__text_article(data-lang-ua='<a href="service_1.html">Чоловіча стрижка</a> і моделювання бороди одночасно - найбільш мудре рішення для бородатих людей. Послуга "Комплекс" в <b>Baribal</b> дозволяє вам повністю привести себе в порядок за вигідною ціною і при цьому заощадити час.' data-lang-ru='<a href="service_1.html">Мужская стрижка</a> и моделирование бороды одновременно – наиболее мудрое решение для бородатых людей. Услуга “Комплекс” в <b>Baribal</b> позволяет вам полностью привести себя в порядок по выгодной цене и при этом сэкономить время.')
        .service__wrapper_list
          h2.service__title_list(data-lang-ua='Що входить у послугу "Комплекс"?' data-lang-ru='Что входит в услугу "Комплекс" ?')
          ul.service__list
            li.service__item(data-lang-ua='Ваша послуга починається з консультаціі.Визначаємо переваги по довжині та формі стрижки і бороди, підбираємо оптимальний варіант і стиль.' data-lang-ru='Ваша услуга начинается с консультации. Выясняем предпочтения по длине и форме стрижки и бороды, подбираем оптимальный вариант и стиль.')
            li.service__item(data-lang-ua='Далі ваш барбер миє волосся очищуючим шампунем і поживним кондиціонером.' data-lang-ru='Далее ваш барбер моет волосы очищающим шампунем и питательным кондиционером.')
            li.service__item(data-lang-ua='За допомогою професійних машинок і ножиць майстер надає форму <a href="service_1.html">чоловічої стрижки</a>.' data-lang-ru='С помощью профессиональных машинок и ножниц мастер придает форму <a href="service_1.html">мужской стрижки</a>.')
            li.service__item(data-lang-ua='Ще одне миття волосся, в залежності від ваших побажань і необхідності.' data-lang-ru='Еще одно мытье волос, в зависимости от ваших пожеланий и необходимости.')
            li.service__item(data-lang-ua='Барбер створює форму бороди за допомогою машинки і ножиць.' data-lang-ru='Барбер создает форму бороды с помощью машинки и ножниц.')
            li.service__item(data-lang-ua='Майстер підкреслює контур тримерами, в залежності від побажань гостя, далі барбер видаляє зайве волосся шейвером.' data-lang-ru='Мастер подчеркивает контура триммером, в зависимости от пожеланий гостя, далее барбер удаляет лишние волосы шейвером.')
            li.service__item(data-lang-ua='Після роботи тримерами і шейвером шкіру необхідно розпарити: наносимо піну, ефірну олію, накриваємо обличчя гарячим рушником' data-lang-ru='После работы триммером и шейвером кожу необходимо распарить: наносим пену, эфирное масло, накрываем лицо горячим полотенцем.')
            li.service__item(data-lang-ua='Далі барбер наводить контур і підбриває небезпечною бритвою (за побажанням гостя).' data-lang-ru='Далее барбер наводит контур и подбривает опасной бритвой (по пожеланию гостя).')
            li.service__item(data-lang-ua='Барбер визначає засіб, найбільш підходящий за типом волосся і наносить на бороду. З засобів може бути: масло, лосьйон, бальзам або віск.' data-lang-ru='Барбер определяет средство, наиболее подходящее по типу волос и наносит на бороду. Из средств может быть: масло, лосьон, бальзам или воск.')
            li.service__item(data-lang-ua='Майстер робить укладку, обравши потрібний стайлінговий засіб, щоб надати і закріпити форму стрижки для завершення повного образу.' data-lang-ru='Мастер делает укладку, выбрав нужное укладочное средство, чтобы придать и закрепить форму стрижки для завершения полного образа.')

        p.service__text(data-lang-ua='Правильний вибір стрижки під бороду і рівномірні переходи в довжині волосся створюють єдиний образ. Послуга "Комплекс" в <a href="index.html">Baribal</a> - це кращий вибір для тих, хто береже свій час і бажає виглядати стильно.' data-lang-ru='Правильный выбор стрижки под бороду и равномерные переходы в длине волос создают единый образ. Услуга “Комплекс” в <a href="index.html">Baribal</a> – это лучший выбор для тех, кто бережет своё время и желает выглядеть стильно')

        p.service__text(data-lang-ua='Барбери <b>Baribal barbershop</b> рекомендують відвідувати барбершоп не менше ніж 1 раз на місяць, для підтримки охайності бороди, стрижки і їх форми.' data-lang-ru='Барберы <b>Baribal barbershop</b> рекомендуют посещать барбершоп не реже чем 1 раз в месяц, для поддержки аккуратности бороды, стрижки и их формы.')

        p.service__text(data-lang-ua='Відвідати наш барбершоп ви можете за адресою Проспект Миколи Бажана 1а, ЖК "Зарічний". Барбершоп Baribal знаходиться поруч з метро Славутич.' data-lang-ru='Посетить наш барбершоп вы можете по адресу Проспект Николая Бажана 1а, ЖК “Заречный”. Барбершоп Baribal находится рядом с метро Славутич.')



  include components/contacs
  script(src="js/service.js")
